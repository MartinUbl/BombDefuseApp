<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:background="#222222">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="@dimen/digit_width"
                    android:layout_height="@dimen/digit_height"
                    android:id="@+id/digit1"
                    android:src="@drawable/n0"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="@dimen/digit_width"
                    android:layout_height="@dimen/digit_height"
                    android:id="@+id/digit2"
                    android:src="@drawable/n0"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/dvojtecka"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="@dimen/digit_width"
                    android:layout_height="@dimen/digit_height"
                    android:id="@+id/digit3"
                    android:src="@drawable/n0"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="@dimen/digit_width"
                    android:layout_height="@dimen/digit_height"
                    android:id="@+id/digit4"
                    android:src="@drawable/n0"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="ODPOČET ZASTAVEN"
                android:id="@+id/textView9"
                android:layout_gravity="center"
                android:typeface="monospace"
                android:textSize="25dp"
                android:textColor="#cc0000"
                android:textAlignment="center" />
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ODPOČET ZASTAVEN"
            android:id="@+id/finishTextView"
            android:layout_gravity="center"
            android:textColor="#0055cc"
            android:textSize="30dp"
            android:layout_marginTop="-20dp" />
    </FrameLayout>
</LinearLayout>